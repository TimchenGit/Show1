<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" 
    android:paddingTop="@dimen/px20"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px20"
        android:paddingRight="@dimen/px20" >

        <ImageView
            android:id="@+id/show_view_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:src="@drawable/ab_logo" />

        <com.example.show.views.MarqueeTextRun
            android:id="@+id/welcome_string"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px40"
            android:layout_toRightOf="@id/show_view_logo"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="@dimen/px160" >
        </com.example.show.views.MarqueeTextRun>
        
        <!-- 
        <com.example.show.views.MarqueeTextRun
            android:id="@+id/welcome_string"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/show_view_logo"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@color/red"
            android:textSize="160dp" >
        </com.example.show.views.MarqueeTextRun>
        -->
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px20"
        android:paddingRight="@dimen/px20" >

        <!-- 
        <com.example.show.views.MyDigitalClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        -->   

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/time_and_date"
            android:textColor="@color/green"
            android:textSize="@dimen/px105" />
<!--        160dp-->
            
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px20"
        android:paddingRight="@dimen/px20" >

        <TextView
            android:id="@+id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/telephone"
            android:textColor="@color/yellow"
            android:textSize="@dimen/px105" />
        <!--        170dp-->
    </RelativeLayout>

</LinearLayout>